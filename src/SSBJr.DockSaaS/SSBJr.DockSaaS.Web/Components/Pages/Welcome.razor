@page "/welcome"

<PageTitle>Welcome - DockSaaS</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
    <div class="text-center mb-8">
        <MudIcon Icon="Icons.Material.Filled.Cloud" Size="Size.Large" Color="Color.Primary" />
        <MudText Typo="Typo.h2" Class="mt-4 mb-2">Welcome to DockSaaS</MudText>
        <MudText Typo="Typo.h6" Color="Color.Secondary">
            A comprehensive multi-tenant SaaS platform for managing AWS-like cloud services
        </MudText>
    </div>

    <MudGrid>
        <!-- Getting Started -->
        <MudItem xs="12" md="8">
            <MudCard Elevation="4" Class="mb-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">?? Getting Started</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.h6" Class="mb-3">First Time Login</MudText>
                    <MudText Typo="Typo.body1" Class="mb-3">
                        Use these default credentials to access the dashboard:
                    </MudText>

                    <MudCard Elevation="2" Class="pa-4 mb-4" Style="background-color: var(--mud-palette-background-grey);">
                        <MudGrid>
                            <MudItem xs="12" sm="4">
                                <MudText Typo="Typo.subtitle2">Email:</MudText>
                                <MudText Typo="Typo.body1" Style="font-family: monospace;">admin@docksaas.com</MudText>
                            </MudItem>
                            <MudItem xs="12" sm="4">
                                <MudText Typo="Typo.subtitle2">Password:</MudText>
                                <MudText Typo="Typo.body1" Style="font-family: monospace;">Admin123!</MudText>
                            </MudItem>
                            <MudItem xs="12" sm="4">
                                <MudText Typo="Typo.subtitle2">Tenant:</MudText>
                                <MudText Typo="Typo.body1" Style="font-family: monospace;">DockSaaS</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">(optional - leave blank)</MudText>
                            </MudItem>
                        </MudGrid>
                    </MudCard>

                    <MudAlert Severity="Severity.Warning" Class="mb-4">
                        <MudText><strong>Important:</strong> Change the default password after your first login!</MudText>
                    </MudAlert>

                    <div class="text-center mt-6">
                        <MudButton Href="/login" 
                                   Color="Color.Primary" 
                                   Variant="Variant.Filled" 
                                   Size="Size.Large"
                                   StartIcon="Icons.Material.Filled.Login">
                            Sign In Now
                        </MudButton>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- System Status -->
        <MudItem xs="12" md="4">
            <MudCard Elevation="4" Class="mb-4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">??? System Status</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudList Dense="true">
                        <MudListItem>
                            <div class="d-flex align-center">
                                <MudIcon Icon="Icons.Material.Filled.CheckCircle" Color="Color.Success" Class="me-2" />
                                <div>
                                    <MudText Typo="Typo.subtitle2">Application</MudText>
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">Running</MudText>
                                </div>
                            </div>
                        </MudListItem>
                        <MudDivider />
                        <MudListItem>
                            <div class="d-flex align-center">
                                <MudIcon Icon="Icons.Material.Filled.CheckCircle" Color="Color.Success" Class="me-2" />
                                <div>
                                    <MudText Typo="Typo.subtitle2">API Service</MudText>
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">Available</MudText>
                                </div>
                            </div>
                        </MudListItem>
                        <MudDivider />
                        <MudListItem>
                            <div>
                                <MudText Typo="Typo.subtitle2">Environment</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">@Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")</MudText>
                            </div>
                        </MudListItem>
                        <MudDivider />
                        <MudListItem>
                            <div>
                                <MudText Typo="Typo.subtitle2">Server Time</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</MudText>
                            </div>
                        </MudListItem>
                    </MudList>
                </MudCardContent>
            </MudCard>

            <MudCard Elevation="4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">??? Technologies</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <div class="d-flex flex-wrap gap-2">
                        <MudChip Size="Size.Small" Color="Color.Primary">.NET 8</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Secondary">Blazor Server</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Info">PostgreSQL</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Success">Redis</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Warning">MudBlazor</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Error">Docker</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Dark">.NET Aspire</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Primary">JWT Auth</MudChip>
                        <MudChip Size="Size.Small" Color="Color.Secondary">Apache Kafka</MudChip>
                    </div>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Available Services -->
        <MudItem xs="12">
            <MudCard Elevation="4">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h5">?? Available Services</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" sm="6" md="4">
                            <div class="text-center pa-3">
                                <MudIcon Icon="Icons.Material.Filled.Storage" Size="Size.Large" Color="Color.Primary" />
                                <MudText Typo="Typo.subtitle1" Class="mt-2">S3-like Storage</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Object storage with buckets and versioning</MudText>
                            </div>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="4">
                            <div class="text-center pa-3">
                                <MudIcon Icon="Icons.Material.Filled.DataObject" Size="Size.Large" Color="Color.Secondary" />
                                <MudText Typo="Typo.subtitle1" Class="mt-2">RDS Database</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Managed PostgreSQL and MySQL databases</MudText>
                            </div>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="4">
                            <div class="text-center pa-3">
                                <MudIcon Icon="Icons.Material.Filled.TableChart" Size="Size.Large" Color="Color.Info" />
                                <MudText Typo="Typo.subtitle1" Class="mt-2">NoSQL Database</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">DynamoDB-like document database</MudText>
                            </div>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="4">
                            <div class="text-center pa-3">
                                <MudIcon Icon="Icons.Material.Filled.Queue" Size="Size.Large" Color="Color.Success" />
                                <MudText Typo="Typo.subtitle1" Class="mt-2">Message Queue</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">SQS-like messaging service</MudText>
                            </div>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="4">
                            <div class="text-center pa-3">
                                <MudIcon Icon="Icons.Material.Filled.Functions" Size="Size.Large" Color="Color.Warning" />
                                <MudText Typo="Typo.subtitle1" Class="mt-2">Functions</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Lambda-like serverless compute</MudText>
                            </div>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="4">
                            <div class="text-center pa-3">
                                <MudIcon Icon="Icons.Material.Filled.Dns" Size="Size.Large" Color="Color.Error" />
                                <MudText Typo="Typo.subtitle1" Class="mt-2">Apache Kafka</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Streaming data platform</MudText>
                            </div>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <div class="text-center mt-8 mb-4">
        <MudText Typo="Typo.body2" Color="Color.Secondary">
            Built with ?? using .NET 8, Blazor, and MudBlazor
        </MudText>
    </div>
</MudContainer>